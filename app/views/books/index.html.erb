<%= notice %>
<!--Bookの一覧-->
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
    <%= render 'users/user', user: @user, book_new: @book_new %>
    </div>

  <div class="col-md-8 offset-md-1">
    <h3>Books</h3>
    <table class="table">
      <thead>
       <tr>
          <th scope="col"></th>
          <th scope="col">Title</th><!--詳細ページにリンク<= link_to book_path(books.id)>-->
          <th scope="col">Opinion</th>
        </tr>
      </thead>
      <tbody>
      <% @books.each do |books_index| %>
        <tr>
          <td><%= link_to user_path(books_index.user) do %>
              <%= attachment_image_tag books_index.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %>
              <% end %></td>
            <!--books_index　モデル名、：カラム名、サイズ等々-->
          <td><%= link_to book_path(books_index) do %>
              <%= books_index.title %>
              <% end %>
          </td>
          <td><%= books_index.body %></td><!--opinionから変更-->
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  </div>
</div>