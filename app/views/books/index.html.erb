<h1>一覧画面</h1>
<p>Books title/opinion　image画像込みで一覧表示</p>
<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <%= render 'users/user', user: @user, book_new: @book_new %>
    </div>
    <div class="col-lg-8">
      <h3>Users</h3>
      <table>
        <thead>
          <th></th>
          <th>Title</th>
          <th colspan="3">Opinion</th>
        </thead>
        <tbody>
        <% @books.each do |books_index| %>
          
          <td><%= books_index.title %></td>
          <td><%= books_index.opinion %></td>
        <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>
