<h1>詳細画面</h1>
<p>Book detail 投稿者/title/opinion　表示</p>
<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <%= render 'users/user', user: @user, book_new: @book_new %>
    </div>
    <div class="col-lg-8">
    　<h3>Book detail</h3>
    　<table>
      　<thead>
          <th>Title</th>
        　<th>opinion</th>
          <th colspan="3"></th>
        </thead>
        <tbody>
          <td><%= @book_show.title %></td>
          <td><%= @book_show.opinion %></td>
          <% if @book_show.user == current_user %>
            <td><%= link_to "Edit", edit_book_path(@book_show) %></td>
            <td><%= link_to "Destory", book_path(@book_show), method: :delete %></td>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div