<h3>投稿内容の編集ページ</h3>

  <%= form_with model:@book, local:true do |f| %>
  <p>Title</p>
    <%= f.text_field :title %>
  <p>Opinion</p>
    <%= f.text_field :opinion %>
  <span>
    <%= f.submit 'Update Book' %>
  </span>
  <% end %>

<%= link_to "Show", book_path(current_user.id) %>
<%= link_to "Back", books_path %>