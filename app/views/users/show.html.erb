<%= notice %>
<div class="container">
  <div class="row">
    <div class="col-md-3">

      <h3>User info</h3>
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
      <p>name</p>
      <%= @user.name %>
      <p>introduction</p>
      <%= @user.introduction %>

      <%= link_to edit_user_path(@user.id), class: "btn btn-danfer", method: :get do %>
      <i class="fas fa-user-cog"></i>
      <% end %>

      <div class="new">
        <h3>New book</h3>
        <% if @book_new.errors.any? %>
          <%= @book_new.errors.count %>errors prohibited this obj from being saved:
          <% @book_new.errors.full_messages.each do |message| %>
            <%= message %>
          <% end %>
        <% end %>
        <%= form_with model: @book_new, local:true do |f| %>

          <p>Title</p>
          <%= f.text_field :title %>
          <p>Opinion</p>
          <%= f.text_area :body %>
          <span>
          <%= f.submit 'Create Book' %>
          </span>
        <% end %>

    </div>
  </div>
  <div class="col-md-8 offset-md-1">
    <h3>Books</h3>
    <table class="table">
      <thead>
        <tr>
          <th scope="col"></th>
          <th scope="col">Title</th>
          <th scope="col">Opinion</th>
        </tr>
      </thead>
        <tbody>
          <% @mybook.each do |mybook| %>
          <tr>
            <td><%= link_to user_path(@user.id) do%>
                <%= attachment_image_tag mybook.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %>
                <% end %></td>
            <td><%= link_to book_path(mybook.id) do%>
                <%= mybook.title %>
                <% end %></td>
            <td><%= mybook.body %></td><!--opinionからの-->
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  </div>