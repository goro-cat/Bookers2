<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <%= render 'users/user', user: @user, book_new: @book_new %>
      
    </div>
  </div>
  <div class="col-lg-8">
    <table>
      <thead>
        <tr>
        <th></th>
        <th>Title</th>
        <th colspan="3">opinion</th>
        </tr>
     </thead>
      <tbody>
      <% @mybook.each do |mybook| %>
        <td><%= mybook.user_id %></td>
        <td><%= mybook.title %></td>
        <td><%= mybook.opinion %></td>
      <% end %>
      </tbody>
    </table>
  </div>
</div>