<h1>Users</h1>
<p>image/name　参加者一覧</p>
<div class="cintainer">
  <div class="row">
    <div class="col-lg-4">
      <%= render 'users/user', user: @user, book_new: @book_new %>
    </div>
  </div>
  <div class="col-lg-8">
    <h3>Users</h3>
    <table>
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      <% @users.each do |book| %>
        <tr>
          <td><%= attachment_image_tag book, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %></td>
          <td><%= book.name %></td>
          <td><%= link_to "Show", user_path(book.id) %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>